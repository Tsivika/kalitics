{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <h2>{{ title }}</h2>
    </div>
    <div class="m-5">
        {{ form_start(form) }}
        <div class="col-12 text-center ">
            {% include 'shared/flash_alert/index.html.twig' %}
        </div>
        <div class="text-right mb-3">
            <a href="{{ path('list_pointing') }}" class="btn btn-info" role="button" >Liste des pointages</a>
        </div>
        <div class="form-group row">
            <label for="text2" class="col-4 col-form-label">{{ form_label(form.user) }}</label>
            <div class="col-8">
                {{ form_widget(form.user) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="text2" class="col-4 col-form-label">{{ form_label(form.chantier) }}</label>
            <div class="col-8">
                {{ form_widget(form.chantier) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="text3" class="col-4 col-form-label">{{ form_label(form.date) }}</label>
            <div class="col-8">
                {{ form_widget(form.date) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="text1" class="col-4 col-form-label">{{ form_label(form.duration) }}</label>
            <div class="col-8">
                {{ form_widget(form.duration) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-4 col-8">
                <button id="submit_form" name="submit" type="submit" class="btn btn-info">Enregistrer</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
