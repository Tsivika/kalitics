<h2 class="text-center text-danger encart_home_head"> Leur avis compte ! </h2>
<div class="rectangle">
    <div class="carousel-container">
        <div id="testimonialCarousel" class="carousel slide multi-item-carousel " data-ride="carousel" {#data-interval="9999999999999"#}>
            <div class="carousel-inner">
                {% for key, row in testimonials %}
                    {% set active = loop.index0 == 0 ? ' active' : '' %}
                    <div class="carousel-item {{ active }}">
                        <div class="item__third">
                            <div class="card bg-transparent border-0 w-100">
                                <div class="card-body">
                                    <div class="pull-right quote-wrapper">
                                        <span  class="ml-5">
                                            <img src="{{ asset('build/images/hiboo-guillemet.svg') }}">
                                        </span>

                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 text-center">
                                            <img src="{{ asset('uploads/images/' ~ row.pdc) }}" alt="" class="rounded-avatar img-fluid"/>
                                        </div>
                                        <div class="col-lg-9"> 
                                            <h4 class="encart_home_head mb-3 user-name">
                                                {{ row.name }}                                                    
                                            </h4>
                                            <div class="encart_home_body description">
                                                {{ row.content|striptags|slice(0, 130) ~ '...' }}
                                            </div>
                                            <div class="testimonial-rating">
                                                {% for i in 1 .. 5 %}
                                                    <span>
                                                        {% if i <= row.score  %}
                                                            <img src="{{ asset('build/images/star-full.svg') }}">
                                                        {% else %}
                                                            <img src="{{ asset('build/images/star.svg') }}">
                                                        {% endif %}
                                                    </span>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                    
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <div class="degradePrev"></div>
            <div class="degradeNext"></div>
        </div>
    </div>
</div>