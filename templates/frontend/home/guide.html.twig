<h2 class="text-center encart_home_head text-green">Comment Ã§a marche </h2>
<div class=" bd-example">
    <div id="videoGuideCarousel" class="carousel slide multi-item-carousel " data-ride="carousel" {#data-interval="9999999999999"#} >
        <div class="carousel-inner">
            {% for key, row in guides %}
                {% set active =  loop.index0 == 0 ? ' active' : '' %}
                <div class="carousel-item {{ active }}">
                    <div class="item__third itemsContainer">
                        <div class="text-center video-title pb-4">
                            <h5 class="encart_home_body">{{ row.titre }} </h5>
                        </div>
                        <a class=" video-btn image" data-toggle="modal" data-src="{{ row.url }}" data-target="#myModal">
                            <img src="{{ asset('uploads/images/' ~ row.pdc) }}" class="slide-img" alt="">
                        </a>
                        <div class="play">
                            <a class="video-btn image" data-toggle="modal" data-src="{{ row.url }}" data-target="#myModal">
                                <img src="{{ asset('build/images/play-button.svg') }}">
                            </a>
                        </div>
                        <div class="carousel-caption d-none d-md-block"> </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <div class="degradePrev"></div>
        <div class="degradeNext"></div>
    </div>
</div>





<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="close text-right mr-2" data-dismiss="modal">&times;</button>
            <div class="modal-body">

                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="" id="video"  allowscriptaccess="always" allow="autoplay"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>