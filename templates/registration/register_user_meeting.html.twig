{% extends 'base-frontend.html.twig' %}

{% form_theme form 'form/theme/the_hiboo.html.twig' %}

{% block title %}Inviter des participants!{% endblock %}

{% block body %}
    <div class="container">
        <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
            <div class="card card0 border-0">
                <div class="row">
                    <div class="col-8 ml-3">
                        <div class="row encart_home_body small" >
                            <div class="col-4">
                                <div class="circle_step_active one-line float-left" >1</div> Infos personnelles
                            </div>
                            <div class="col-4">
                                <div class="circle_step_active one-line float-left" >2</div> Inviter des participants
                            </div>
                            <div class="col-4">
                                <div class="circle_step one-line float-left" >3</div> Je lance ma réunion
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row d-flex">
                    <div class="col-lg-6">
                        <div class="card1 pb-5" id="image-login">
                            <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                                <img src="{{ asset('build/images/haboo_contact.png')}}" class="image" style="width:100%; height:96%">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 ">
                        {{ form_start(form) }}
                        <p style="margin-bottom:30px ">
                            <h3 class="encart_home_head">Utilisez <span class="text-green">Hiboo!</span> à plusieurs</h3>
                            <span class="encart_home_body my-4">
                                Invitez vos collègues ou amis à votre réunion <strong>Hiboo</strong>.
                            </span>
                        </p>

                        <div class="form-group col-lg-12 mx-auto" style="margin-top: 20px">
                            <div class="participant-data-proto-wrapper border"
                                 data-prototype="{{ form_widget(form.participants.vars.prototype)|e('html_attr') }}"
                                 data-index="{{ form.participants|length }}">
                            </div>
                            <div class="row">
                                <div class="col-12 text-right">
                                    <div class="d-flex justify-content-end">
                                        <button class="btn mb-1 btn-success" id="add_participant" title="Ajouter participant">
                                            Nouveau participant <span class="btn-icon-right"><i class="fa fa-plus"></i></span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn  btn-large py-2 login">
                                <span class="font-weight-bold">Continuer</span>
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="world-globe">
        {% include 'shared/partenaire.html.twig' %}
    </div>
    <br><br>
{% endblock %}
