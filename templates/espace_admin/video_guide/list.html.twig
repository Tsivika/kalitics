{% extends 'base-espace-client.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="wrap_step" style="justify-content: space-between;">
        <div class="">
            <span class="text-green">Gestions des partenaires</span>
        </div>
        <div class="float-right border">
            <a class="btn  btn-large py-2 px-4 login" href="{{ path('app_espace_admin_video_guide_add') }}" role="button">Ajouter une vidéo</a>
        </div>
    </div>
    <div class="container mt-5" id="list-video-guide">
        <div class="row">
            <div class="col-7 col-lg-4 list_meeting_head">
                <span>{{ knp_pagination_sortable(videoGuides, 'Titre', 'titre') }}
            </div>
            <div class="col-lg-5 list_meeting_head d-none d-lg-flex">
                <span>{{ knp_pagination_sortable(videoGuides, 'Lien', 'url') }}</span>
            </div>
            <div class="col-5 col-lg-3 list_meeting_head text-right">
                <span>Actions</span>
            </div>
        </div>
        {% for row in videoGuides|reverse %}
            <div class="row list_meeting_border_radius mt-2">
                <div class="col-7 col-lg-4 d-flex-center">
                    <span>{{ row.titre }}</span>
                </div>
                <div class="col-lg-5 d-flex-center d-none d-lg-flex">{{ row.url }}</div>
                <div class="col-5 col-lg-3 actions text-right">
                    <a href="{{ path('app_espace_admin_video_guide_edit', {'id' : row.id}) }}"
                       role="button"
                       class="btn-icon-right btn btn-danger encart_home_body m-2">
                        <i class="fa fa-edit text-dark" aria-hidden="true"></i>
                    </a>
                    <a href="#" data-video_guide="{{ row.id }}" class="btn btn-danger delete_video_guide">
                        <i class="fa fa-trash text-dark" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        {% endfor %}
        <div class="list_pagination">{{ knp_pagination_render(videoGuides) }}</div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <link href="{{ asset('build/css/toastr.min.css') }}" rel="stylesheet"/>
    <script src="{{ asset('build/js/toastr.min.js') }}"></script>
    <script>
        function copyToPaste(id) {
            var copyText = document.getElementById("linkInput_" + id);
            copyText.select();
            copyText.setSelectionRange(0, 99999);
            document.execCommand("copy");

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "2000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };

            toastr["success"]("Lien de la réunion copié.")
        }
    </script>
{% endblock %}