{% extends 'base-espace-client.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 ">
            <a href="{{ path('app_espace_admin_video_guide_list') }}" class="text-green"> Gestions des vid√©os </a> <span class="mx-2"> > </span>  {{title}}
        </div>
    </div>
    <div class="mt-3">
        {{ form_start(form) }}
            <h5 class="encart_home_body mb-4">
                {{title}}
            </h5>

            <div class="justify-content-center ">
                <div class="text-center ">
                    {% include 'shared/flash_alert/sendMail.html.twig' %}
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-sm-3 pt-2">{{ form_label(form.titre) }}</div>
                <div class="col-sm-9">{{ form_widget(form.titre) }}</div>
            </div>
          
            <div class="row mt-4">
                <div class="col-sm-3 pt-2">{{ form_label(form.url) }}</div>
                <div class="col-sm-9">{{ form_widget(form.url) }}</div>
            </div>
          
            <div class="row mt-4">
                <div class="col-sm-3 pt-2">{{ form_label(form.pdc) }}</div>
                <div class="col-sm-9">{{ form_widget(form.pdc) }}</div>
            </div>
          
            <hr>
            <div class="form-group mt-5">
                <button type="submit" class="btn  btn-large py-2 login">
                    <span class="font-weight-bold">{{ titleBouton }}</span>
                </button>
                <button type="reset" class="btn  btn-large py-2 btn-outline-danger signin">
                    <span class="font-weight-bold ">Annuler</span>
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}