{% extends 'base-espace-client.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row mt-4">
        <div class="col-lg-12 ">
            <a href="{{ path('app_espace_admin_testimonial_list') }}" class="text-green"> Gestions des avis </a> <span class="mx-2"> > </span>  {{title}}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-lg-12 ">
            {{ form_start(form) }}
            <h5 class="encart_home_body mb-4">
                {{title}}
            </h5>

            <div class="row justify-content-center ">
                <div class="col-lg-6 text-center ">
                    {% include 'shared/flash_alert/index.html.twig' %}
                </div>
            </div>
            <div class="row">
                <div class="col-6 col-lg-6 col-md-6">
                    <div class="input-group wrap_input ">
                        <div class="item-input-label">{{ form_label(form.name) }}</div>
                        <div class="item-input">{{ form_widget(form.name) }}</div>
                    </div>
                    <div class="input-group wrap_input ">
                        <div class="item-input-label">{{ form_label(form.score) }}</div>
                        <div class="item-input">{{ form_widget(form.score) }}</div>
                    </div>
                </div>
                <div class="col-6 col-lg-6 col-md-6">
                    <div class="input-group wrap_input ">
                        <div class="item-input-label">{{ form_label(form.image) }}</div>
                        <div class="item-input">{{ form_widget(form.image) }}</div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="input-group wrap_input ">
                <div class="item-input-label">{{ form_label(form.content) }}</div>
                <div class="item-input">
                    {{ form_widget(form.content) }}
                    {#<br>
                    Il vous reste <span id="carac_reste_textarea_1"></span> caract√®res.#}
                </div>
            </div>

            <div class="form-group col-lg-12 mx-auto mt-5">
                <button type="submit" class="btn  btn-large py-2 login">
                    <span class="font-weight-bold">{{ titleBouton }}</span>
                </button>
                <button type="reset" class="btn  btn-large py-2 btn-outline-danger signin">
                    <span class="font-weight-bold ">Annuler</span>
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}