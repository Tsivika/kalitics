{% extends 'base-espace-client.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row mt-4">
        <div class="col-lg-12 ">
            <a href="{{ path('app_espace_admin_testimonial_list') }}" class="text-green"> Gestions des avis </a> <span class="mx-2"> > </span>  {{title}}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-lg-12 ">
            {{ form_start(form) }}
            <h5 class="encart_home_body mb-4">
                {{title}}
            </h5>

            <div class="row justify-content-center ">
                <div class="col-lg-6 text-center ">
                    {% include 'shared/flash_alert/sendMail.html.twig' %}
                </div>
            </div>

            <div class="row mt-4  pt-2">
                <div class="col-12">{{ form_label(form.name) }}</div>
                <div class="col-12">{{ form_widget(form.name) }}</div>
            </div>

            <div class="row mt-4  pt-2">
                <div class="col-12">{{ form_label(form.score) }}</div>
                <div class="col-12">{{ form_widget(form.score) }}</div>
            </div>

            <div class="row mt-4  pt-2">
                <div class="col-12">{{ form_label(form.image) }}</div>
                <div class="col-12">{{ form_widget(form.image) }}</div>
            </div>

            <hr>
            <div class="row mt-4  pt-2">
                <div class="col-12">{{ form_label(form.content) }}</div>
                <div class="col-12">{{ form_widget(form.content) }}</div>
            </div>

            <hr>
            <div>
                <button type="submit" class="btn  btn-large py-2 login">
                    <span class="font-weight-bold">{{titleBouton}}</span>
                </button>
                <button type="reset" class="btn  btn-large py-2 btn-outline-danger signin">
                    <span class="font-weight-bold ">Annuler</span>
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}