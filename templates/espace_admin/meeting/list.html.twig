{% extends 'base-espace-client.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div>
            <span class="text-green">Gestions des réunions</span>
        </div>
    </div>
    <div class="row mt-4 ">
        <div class="text-right">
            <a class="btn  btn-large py-2 login" href="{{ path('app_espace_admin_meeting_add') }}" role="button">Ajouter une réunion</a>
        </div>
    </div>
    <div class="container mt-5" id="list-meetings">

        <div class="row">
            <div class="col-lg-3 list_meeting_head" style="display: flex; justify-content: flex-start">
                <span>{{ knp_pagination_sortable(meetings, 'Créateur', 'user.email') }}
            </div>
            <div class="col-lg-3 list_meeting_head "  style="display: flex; justify-content: flex-start">
                <span>{{ knp_pagination_sortable(meetings, 'Lien', 'identifiant') }}</span>
            </div>
            <div class="col-lg-2 list_meeting_head"><span>{{ knp_pagination_sortable(meetings, 'Statut', 'state') }}</span></div>
            <div class="col-lg-4 list_meeting_head">
                <div class="contain">
                    <div class="row">
                        <div class="col-8"><span>{{ knp_pagination_sortable(meetings, 'Date de création', 'CreatedAt') }}</span></div>
                    </div>
                </div>
            </div>
        </div>
        {% for row in meetings|reverse %}
            <div class="row list_meeting_border_radius mt-2"
                 style="display: flex;
                 justify-content: center;
                 align-items: center;
                ">
                <div class="col-lg-3" style="display: flex; justify-content: space-between">
                    <span>{{ row.user.email }}</span>
                </div>
                <div class="col-lg-3 "><input class="input_copy" type="text" id="linkInput_{{ row.id }}" value="{{ baseUrl }}/reunion/{{ row.identifiant }}" readonly></div>
                <div class="col-lg-2 ">
                    {% set state = '<i class="fa fa-circle" style="color: #ffaa2b"></i> En attente' %}

                    {% if row.state == 2 %}
                        {% set state = '<i class="fa fa-circle " style="color: #dc3545"></i> Terminé' %}
                    {% elseif row.state == 1  %}
                        {% set state = '<i class="fa fa-circle text-green"></i> En cours' %}
                    {% endif %}

                    {{ state |raw }}
                </div>
                <div class="col-lg-4 actions link_identifiant ">
                    <div class="container">
                        <div class="row ">
                            <div class="col-4 text-left">{{ row.CreatedAt|date("d/m/yy") }}</div>
                            <div class="col-8 text-right">
                                <button class="btn-icon-right btn btn-danger encart_home_body"
                                        type="button"
                                        onclick="return copyToPaste({{ row.id }});"
                                        data-target="#link-meeting">
                                    Copier lien <i class="fa fa-files-o" aria-hidden="true"></i>
                                </button>
                                <a href="#" data-meeting="{{ row.id }}" class="delete_meeting_bo">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        {% endfor %}
        <div class="list_pagination">{{ knp_pagination_render(meetings) }}</div>


    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <link href="{{ asset('build/css/toastr.min.css') }}" rel="stylesheet"/>
    <script src="{{ asset('build/js/toastr.min.js') }}"></script>
    <script>
        function copyToPaste(id) {
            var copyText = document.getElementById("linkInput_" + id);
            copyText.select();
            copyText.setSelectionRange(0, 99999);
            document.execCommand("copy");

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "2000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };

            toastr["success"]("Lien de la réunion copié.")
        }
    </script>
{% endblock %}