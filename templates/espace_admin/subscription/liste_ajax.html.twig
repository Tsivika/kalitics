<div class="mb-5">
    <a class="btn  btn-large py-2 login" href="{{ path('app_espace_admin_subscription_add') }}" role="button">Ajouter un nouvel abonnement</a>
</div>
<h3 class="text-center text-danger encart_home_head" >Les abonnements </h3>
<div class="row text-center">
    {% for row in subscriptions %}
        <div class="col-md-4 mb-5">
            <div class="card card-tarif" id="tarif1">
                <div class="card-body text-center">
                    <h5 class="card-title text-center encart_home_head">{{ row.title }}</h5>
                    <div class="small mb-3 text-danger">
                        {{ row.getUsers|length }} utilisateur{{ row.getUsers|length > 1 ? 's' : '' }}
                    </div>
                    <p class="text-justify encart_home_body"><i class="fa fa-check-circle" aria-hidden="true"></i> Durée de réunion {{ row.durationMeeting}} </p>
                    <p class="text-justify encart_home_body"><i class="fa fa-check-circle" aria-hidden="true"></i> Nombre de participants : {{ row.numberParticipant}} </p>
                    <p class="text-justify encart_home_body"><i class="fa fa-check-circle" aria-hidden="true"></i> Création d'une réunion sécurisée en moins de 2 min  </p>
                    {% if row.messagingInstant %}
                        <p class="text-justify encart_home_body"><i class="fa fa-check-circle" aria-hidden="true"></i> Messagerie instantanée  </p>
                    {% endif %}
                    {% if row.screenSharing %}
                        <p class="text-justify encart_home_body"><i class="fa fa-check-circle" aria-hidden="true"></i> Partage d'écran en direct  </p>
                    {% endif %}
                    {% if row.recordingMeeting %}
                        <p class="text-justify encart_home_body"><i class="fa fa-check-circle" aria-hidden="true"></i> Enregistrement des réunions </p>
                    {% endif %}
                    {% if row.reminderMeeting %}
                        <p class="text-justify encart_home_body"><i class="fa fa-check-circle" aria-hidden="true"></i> Rappel automatique des réunions par mail  </p>
                    {% endif %}
                    <h5 class=" encart_home_head">
                        {% if row.price|length > 0 %}
                            {{ row.price }} €
                        {% else %}
                            Gratuit
                        {% endif %}
                    </h5>
                    <a role="button" href="{{ path('app_espace_admin_subscription_edit', {'id':row.id}) }}" class="btn start encart_home_body">Modifier</a>
                    {% if row.getUsers|length >= 1 %}
                        <span data-toggle="tooltip" title="On ne peut pas supprimer un abonnement en cours d'utilisation.">
                                    <button
                                            class="btn btn-danger btn-sm signin">Supprimer</button>
                                </span>
                    {% else %}
                        <button
                                data-subscritpion="{{ row.id }}"
                                class="btn btn-outline-danger btn-sm signin delete_subscription">Supprimer</button>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
</div>