{% extends 'base-espace-client.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-8">
           <span class="text-green">Gestions des partenaires</span>
        </div>
        <div class="col-4">
            <div class="w-100 text-right">
                <a class="btn  btn-large py-2 login"  href="{{ path('app_espace_admin_partner_add') }}" role="button">
                    <span class="fa fa-plus"></span>
                    <span class="d-none d-sm-inline-block">
                        Créer un partenaire
                    </span>
                </a>
            </div>
        </div>
    </div>



    <div class="container mt-5" id="list-partner">
        <div class="row">
            <div class="col-lg-4 list_meeting_head">
                <span>{{ knp_pagination_sortable(partners, 'Nom', 'name') }}
            </div>
            <div class="col-lg-5 list_meeting_head "  style="display: flex; justify-content: flex-start">
                <span>{{ knp_pagination_sortable(partners, 'Site web', 'webSite') }}</span>
            </div>
            <div class="col-lg-3 list_meeting_head">
            </div>
        </div>
        {% for row in partners|reverse %}
            <div class="row list_meeting_border_radius mt-2">
                <div class="col-sm-6 col-lg-12  mt-2">
                        <div class="row card-borderer mx-1">
                            <div class="col-lg-3 d-flex-center-left">
                                <span class="overflow-hidden">
                                    {{ row.name }}
                                </span>
                            </div>
                            <div class="col-lg-6 d-flex-center-left">
                                <span class="overflow-hidden">
                                    {{ row.webSite }}
                                <span>
                            </div>
                            <div class="col-lg-3 actions  d-flex-center-right">
                                 <div class="w-100 w-100 text-right actions">
                                    <a href="{{ path('app_espace_admin_partner_edit', {'id' : row.id}) }}"
                                    role="button"
                                    class="btn-icon-right btn btn-danger" >
                                        Modifier
                                    </a>
                                    <a href="#" data-partner="{{ row.id }}" class="btn btn-danger delete_partner">
                                        <i class="fa fa-trash text-dark" aria-hidden="true"></i>
                                    </a>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="list_pagination">{{ knp_pagination_render(partners) }}</div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <link href="{{ asset('build/css/toastr.min.css') }}" rel="stylesheet"/>
    <script src="{{ asset('build/js/toastr.min.js') }}"></script>
    <script>
        function copyToPaste(id) {
            var copyText = document.getElementById("linkInput_" + id);
            copyText.select();
            copyText.setSelectionRange(0, 99999);
            document.execCommand("copy");

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "2000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };

            toastr["success"]("Lien de la réunion copié.")
        }
    </script>
{% endblock %}