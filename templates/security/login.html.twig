{% extends 'base-frontend.html.twig' %}

{% block title %}Se connecter à Iboo !{% endblock %}

{% block body %}
    <div class="container mt-5 mx-auto login-container">
        <div class="card box-shadow-login">
            <div class="row content">
                <div class="col-lg-6 card-bg">
                    <img src="{{ asset('frontend/images/hiboo_connexion.png')}}" class="image-bg">
                </div>
                <div class="col-lg-6 card-content">
                    <form method="post">
                        <input type="hidden" name="_target_path" value="{{ redirect }}"/>
                        <h1 class="encart_home_body pt-4 black_hiboo" style="letter-spacing: -1px">Connexion <span class="text-green">Iboo</span></h1>
                        <span class="encart_home_body black_hiboo">
                                Connectez-vous afin de profiter pleinement de vos réunions
                            </span>
                        <p>
                            {% if error %}
                        <div class="alert alert-danger encart_home_body">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3 encart_home_body small">
                                Vous êtes connecté en tan que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                            </div>
                        {% endif %}
                        </p>
                        <div class="row">
                            <!-- Email Address -->
                            <div class="input-group col-sm-10 col-lg-8 mb-3 mt-5" >
                                <input type="email" value="{{ last_username }}" placeholder="Adresse mail" name="email" id="inputEmail" class="form-control py-4" required autofocus style="padding:15px 30px 25px 20px">
                            </div>

                            <div class="input-group col-sm-10 col-lg-8 mb-2">
                                <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="form-control py-4" required style="padding:15px 30px 25px 20px">
                            </div>
                        </div>

                        <div class="row encart_home_body " style="font-size: 12px; margin-bottom:20px">
                            <div class="col-6 col-sm-4 pr-0">
                                <a href="{{ path('app_forgot_password_request') }}" class="text-danger ml-2" > Mot de passe oublié ? </a>
                            </div>
                            <div class="col-6 col-sm-6 black_hiboo p-0">
                                Pas de compte ? <a href="{{ path('app_register') }}" class="link">Inscrivez vous</a>
                            </div>
                        </div>

                        <div class="encart_home_body black_hiboo" style="margin-top: 60px;font-size: 12px;padding: 10px;">
                            En me connectant, j'accepte votre <a href="#" class="link">Politique de confidentialité</a> et <a href="#" class="link">les Conditions de service.</a>
                        </div>
                        <div class="form-group col-lg-12 mx-auto mb-0">
                            <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}"
                            >
                            <button type="submit" class="btn  btn-large py-2 login btn-login">
                                <span class="font-weight-bold">Se connecter</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <form action="" id="form_recovery_password">
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Récupération du mot du mot de
                                    passe</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group" id="form_email">
                                    <label for="email_recovery">
                                        Indiquez-nous votre email pour créer un
                                        nouveau mot de passe.
                                    </label>
                                    <input type="email" name="emailRecovery" id="email_recovery"
                                            class="form-control"
                                            placeholder="Votre email"
                                            required
                                    >
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer
                                </button>
                                <button type="submit" class="btn btn-success">Envoyer</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="login-rs">
        {% include "shared/social-network-icons.html.twig" %}
    <div>

    <div class="world-globe">
        {{ include('shared/partenaire.html.twig') }}
    </div>
<br><br>


{% endblock %}
