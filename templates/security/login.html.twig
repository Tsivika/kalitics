{% extends 'base-frontend.html.twig' %}

{% block title %}Se connecter à Hiboo!{% endblock %}

{% block body %}
    <div class="container">
        <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
            <div class="card card0 border-0">
                <div class="row d-flex">
                    <div class="col-lg-6 ">
                        <div class="card1" id="image-login">
                            <div class="row justify-content-center">
                                <img src="{{ asset('frontend/images/hiboo_connexion.png')}}" class="image" style="width:100%; height:96%"> </div>
                        </div>
                    </div>
                    <div class="col-lg-6 box-shadow-login">
                        <form method="post">
                            <input type="hidden" name="_target_path" value="{{ redirect }}"/>

                            <h1 class="encart_home_head pt-2" style="letter-spacing: -1px">Connexion <span class="text-green">Hiboo</span></h1>
                            <span class="encart_home_body">
                                    Connectez-vous afin de profiter pleinement de vos réunions
                                </span>
                            <p>
                                {% if error %}
                            <div class="alert alert-danger encart_home_body">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3 encart_home_body small">
                                    Vous êtes connecté en tan que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                                </div>
                            {% endif %}
                            </p>
                            <div class="row">
                                <!-- Email Address -->
                                <div class="input-group col-sm-10 col-lg-8 mb-4 mt-5" >
                                    <input type="email" value="{{ last_username }}" placeholder="Adresse mail" name="email" id="inputEmail" class="encart_home_body form-control" required autofocus>
                                </div>

                                <div class="input-group col-sm-10 col-lg-8 mb-2">
                                    <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="form-control encart_home_body py-2" required>
                                </div>
                            </div>

                            <div class="row encart_home_body " style="font-size: 12px; margin-bottom:20px">
                                {#<div class="checkbox mb-3 col-lg-4">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> me souvenir de moi
                                    </label>
                                </div>#}
                                <div class="col-lg-4">
                                    <a href="{{ path('app_forgot_password_request') }}" class="text-danger ml-2" > Mot de passe oublié ? </a>
                                </div>
                                <div class="col-lg-6">
                                    Pas de compte ? <a href="{{ path('app_register') }}" class="link">Inscrivez vous</a>
                                </div>
                            </div>

                            <div class="encart_home_body" style="margin-top: 60px;font-size: 12px;padding: 10px;">
                                En me connectant, j'accepte votre <a href="#" class="link">Politique de confidentialité</a> et <a href="#" class="link">les Conditions de service.</a>
                            </div>
                            <div class="form-group col-lg-12 mx-auto mb-0">
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                                <button type="submit" class="btn  btn-large py-2 login" style="padding: 0px 70px">
                                    <span class="font-weight-bold">Se connecter</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <form action="" id="form_recovery_password">
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                         aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Récupération du mot du mot de
                                        passe</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group" id="form_email">
                                        <label for="email_recovery">
                                            Indiquez-nous votre email pour créer un
                                            nouveau mot de passe.
                                        </label>
                                        <input type="email" name="emailRecovery" id="email_recovery"
                                               class="form-control"
                                               placeholder="Votre email"
                                               required
                                        >
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer
                                    </button>
                                    <button type="submit" class="btn btn-success">Envoyer</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="world-globe">
        {{ include('shared/partenaire.html.twig') }}
    </div>
    <br><br>


{% endblock %}
