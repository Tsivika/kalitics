{% extends 'base-espace-client.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-7">
            <span class="text-green">Gestions des réunions</span>
        </div>
        <div class="col-5">
            <div class="w-100 text-right">
                {% if user.active %}
                    <a class="btn  btn-large py-2 login" href="{{ path('app_espace_client_meeting_add') }}" role="button">
                        <span class="fa fa-plus"></span>
                        <span class="d-none d-sm-inline-block">
                            Ajouter une réunion
                        </span>
                    </a>
                {% else %}
                    <span class="btn  btn-large py-2 btn-outline-danger" role="button">
                        Ajout réunion désactivé pour les utilisateurs désactivés.
                    </span>
                {% endif %}
            </div>
        </div>
    </div>


    <div class="mt-5 container" id="list-meetings">

        <div class="row">
            <div class="col-lg-2 list_meeting_head">
               {{ knp_pagination_sortable(meetings, 'Début', 'date') }}
            </div>
            <div class="col-lg-3 list_meeting_head">
               {{ knp_pagination_sortable(meetings, 'Sujet', 'subject') }}
            </div>
            <div class="col-lg-7 list_meeting_head">
                Identifiant de réunion
            </div>
        </div>
        <div class="row">
            {% for row in meetings|reverse %}
                <div class="col-sm-6 col-lg-12  mt-2">
                    <div class="row card-borderer mx-1">
                        <div class="col-lg-2 d-flex-center-left">
                            <span>{{ row.date|date("d/m/yy") }} à  {{ row.date|date("H:i") }}</span>
                        </div>
                        
                        <div class="col-lg-3 d-flex-center-left">
                            {{ row.subject }}
                        </div>

                        <div class="col-lg-2 d-flex-center-left">
                            <input class="input_copy" type="text" id="linkInput_{{ row.id }}" value="{{ baseUrl }}/reunion/{{ row.identifiant }}" readonly>
                        </div>
                        <div class="col-lg-5 actions link_identifiant d-flex-center-right">                           
                            <div class="w-100">
                                <div class="pull-right">
                                    <a class="btn btn-info detail_meeting encart_home_body" href="#" data-meeting="{{ row.id }}">
                                        <span> Plus </span>
                                        <span class="fa fa-info ml-2" aria-hidden="true"></span>
                                    </a>
                                    
                                    <button class="btn btn-danger mr-2" role="button" type="button" onclick="return copyToPaste({{ row.id }});" {{ row.status ? 'disabled="disabled"' : '' }} data-target="#link-meeting">
                                        <span class="d-none d-lg-inline-block">Copier lien</span>
                                        <span class="fa fa-clone ml-2" aria-hidden="true"></span>
                                    </button>
                                    <a href="#" data-meeting="{{ row.id }}"  class="btn btn-danger delete_meeting">
                                        <i class="fa fa-trash text-dark" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="list_pagination">{{ knp_pagination_render(meetings) }}</div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <link href="{{ asset('build/css/toastr.min.css') }}" rel="stylesheet"/>
    <script src="{{ asset('build/js/toastr.min.js') }}"></script>
    <script>
        function copyToPaste(id) {
            var copyText = document.getElementById("linkInput_" + id);
            copyText.select();
            copyText.setSelectionRange(0, 99999);
            document.execCommand("copy");

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "2000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };

            toastr["success"]("Lien de la réunion copié.")
        }
    </script>
{% endblock %}