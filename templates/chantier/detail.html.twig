{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <h2>{{ title }}</h2>
    </div>
    <div class="m-5">
        <div class="text-right mb-3">
            <a href="{{ path('list_chantier') }}" class="btn btn-info" role="button" >Liste des chantiers</a>
        </div>
        <div class="form-group row">
            <label for="text3" class="col-3 col-form-label font-weight-bold">Nom chantier: </label>
            <label for="text3" class="col-4 col-form-label">{{ chantier.name }}</label>
        </div>
        <div class="form-group row">
            <label for="text1" class="col-3 col-form-label font-weight-bold">Adresse chantier</label>
            <label for="text1" class="col-4 col-form-label">{{ chantier.address }}</label>
        </div>
        <div class="form-group row">
            <label for="text2" class="col-3 col-form-label font-weight-bold">Date début chantier</label>
            <label for="text2" class="col-4 col-form-label">{{ chantier.startDate|date("m/d/Y") }}</label>
        </div>
        <div class="form-group row">
            <label for="text2" class="col-3 col-form-label font-weight-bold">Nombre de personne pointés</label>
            <label for="text2" class="  col-4 col-form-label">{{ totalUser }} personne(s)</label>
        </div>
        <div class="form-group row">
            <label for="text2" class="col-3 col-form-label font-weight-bold">Nombre des heures cumulés</label>
            <label for="text2" class="col-4 col-form-label">{{ totalHour }} heures</label>
        </div>
        <div class="mt-5">
            <h3>Liste des personnes pointés sur ce chantier</h3>
            {% if listUsers is defined %}
                <table class="table">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nom utilisateur</th>
                        <th scope="col">Date</th>
                        <th scope="col">Durée</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for row in listUsers %}
                        <tr>
                            <th scope="row">{{ row.user.lastname }} {{ row.user.firstname }}</th>
                            <td>{{ row.date|date("m/d/Y") }}</td>
                            <td>{{ row.duration }} heure(s)</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="text-center m-5">Pas de liste</div>
            {% endif %}
        </div>
    </div>

{% endblock %}
