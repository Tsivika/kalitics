    <div>
        <div class="d-block d-lg-none text-center fake-nav-brand py-3">
            <a class="navbar-brand" href="{{ path('app_homePage') }}">
                <img src="{{ asset('build/images/Hiboo-logo.svg') }}" alt="Hiboo">
            </a>
        </div>
        <div id="menu_espc">
            {#<span class="text-danger">{{ app.request.get('_route') }}</span>#}
            {% set path_dashbord = 'app_espace_client_meeting_list' %}
            {% set path_subscription = 'app_espace_client_subscription_list' %}
            {% set path_meeting = 'app_espace_client_meeting_list' %}

            {% if is_granted('ROLE_ADMIN') %}
                {% set path_subscription = 'app_espace_admin_subscription_list' %}
                {% set path_meeting = 'app_espace_admin_meeting_list' %}
                {% set path_dashbord = 'app_espace_admin_dashbord' %}
            {% endif %}

            <nav class="navbar navbar-dark navbar-expand-lg">
                 <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navBarBo" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <div class="custom-navbar-toggler-icon"></div>
                </button>
                <div class="collapse navbar-collapse pt-2" id="navBarBo">
                    <ul class="navbar-nav">
                        <li class="nav-item item-link">
                        <a href="{{ path(path_dashbord) }}">Accueil</a>
                        </li>
                        <li class="nav-item  item-link {% if app.request.get('_route') == path_meeting %} active {% endif %}">
                        <a href="{{ path(path_meeting) }}">Réunions</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item  item-link">
                                <a href="{{ path(path_dashbord) }}">Accueil</a>
                            </li>
                            <li class="nav-item  item-link {% if app.request.get('_route') == 'app_espace_admin_testimonial_list' %} active {% endif %}">
                                <a href="{{ path('app_espace_admin_testimonial_list') }}">Avis</a>
                            </li>
                            <li class="nav-item  item-link {% if app.request.get('_route') == 'app_espace_admin_partner_list' %} active {% endif %}">
                                <a href="{{ path('app_espace_admin_partner_list') }}">Partenaire</a>
                            </li>
                            <li class="nav-item  item-link {% if app.request.get('_route') == 'app_espace_admin_video_guide_list' %} active {% endif %}">
                                <a href="{{ path('app_espace_admin_video_guide_list') }}">Vidéos</a>
                            </li>

                            <li class="nav-item  item-link dropdown
                                {% if app.request.get('_route') == 'app_espace_admin_guide_list' %} active {% endif %}
                                    {% if app.request.get('_route') == 'app_espace_admin_category_guide' %} active {% endif %}"
                                >
                                <a class=" dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown">Guide</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_espace_admin_guide_list') }}">Guide</a>
                                    <a class="dropdown-item" href="{{ path('app_espace_admin_category_guide') }}">Catégorie</a>
                                </div>
                            </li>
                            <li class="nav-item  item-link dropdown
                                {% if app.request.get('_route') == 'app_espace_admin_user_subscriber_list' %} active {% endif %}
                                {% if app.request.get('_route') == 'app_espace_admin_codePromo_list' %} active {% endif %}
                                {% if app.request.get('_route') == path_subscription %} active {% endif %}
                            ">
                                <a class=" dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown">Abonnement</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path(path_subscription) }}">Les abonnements</a>
                                    <a class="dropdown-item" href="{{ path('app_espace_admin_user_subscriber_list') }}">Les abonnés</a>
                                    <a class="dropdown-item" href="{{ path('app_espace_admin_codePromo_list') }}">Les coupons</a>
                                </div>
                            </li>

