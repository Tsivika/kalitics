                            <li class="nav-item  item-link {% if app.request.get('_route') == 'app_espace_client_profil_edit' %} active {% endif %}">
                                <a href="{{ path('app_espace_client_profil_edit') }}">Profil</a>
                            </li>
                            <li class="nav-item  item-link {% if app.request.get('_route') == 'app_espace_client_parameter_add' %} active {% endif %}">
                                <a href="{{ path('app_espace_client_parameter_add') }}">Paramètres</a>
                            </li>
                            <li class="nav-item  item-link {% if app.request.get('_route') == 'app_espace_client_guide_list' %} active {% endif %}">
                                <a href="{{ path('app_espace_client_guide_list') }}">Guide</a>
                            </li>
                            <li class="nav-item  item-link {% if app.request.get('_route') == 'app_espace_client_subscription_list' %} active {% endif %}">
                                <a href="{{ path(path_subscription) }}">Abonnement</a>
                            </li>
                        {% endif %}
                    </ul>
                    <ul class="user-right-menu">
                        <li class="nav-item d-none d-lg-block" style="flex: 2; text-align: right">
                            <a id="dropdownMenuButton" data-toggle="dropdown" class="mr-1">
                                    Bonjour, {{ app.user.firstname }}
                            </a>
                            {% if app.user.pdp == '' %}
                                <img src="{{ asset('build/images/avatarDefault.png') }}"  class="rounded-circle image-profil" alt="" style="width: 40px; height: 40px">
                            {% else %}
                                <img src="{{ asset(twig_asset_image_directory ~ app.user.pdp) }}"  class="rounded-circle image-profil" alt=""  style="width: 40px; height: 40px">
                            {% endif %}
                        </li>
