<a{% for attr, value  in options %} {{ attr }}="{{ value }}"{% endfor %} >
    <span class="mr-4">{{ title }}</span>
    <span class="pull-right" style="font-weight: lighter;">
        {% if sorted %}
            {% if direction == 'desc' %}
                <i class="fa fa-chevron-up text-green"></i>
            {% else %}
                <i class="fa fa-chevron-down text-green"></i>
            {% endif %}
        {% else %}
            <i class="fa fa-chevron-down" style="color: #062944;"></i>
        {% endif %}
    </span>
</a>
